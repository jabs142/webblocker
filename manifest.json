{
    "manifest_version": 3,
    "name": "Procrastination Blocker",
    "version": "0.1.2",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "default.html",
      "default_icon": {
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["index.js"]
      }
    ],
    "host_permissions": [
      "https://www.youtube.com/",
      "https://www.facebook.com/",
      "https://www.netflix.com/"
    ]
  }
  
{
  "manifest_version": 3,
  "name": "BlockBuddy",
  "version": "0.1.2",
  "description": "Website blocker and pomodoro timer for enhancing focus",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./images/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
